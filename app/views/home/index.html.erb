<h1>Grocery Store - Pivot Tables in Javascript demo</h1>

<div style="margin:1em 0;">
  <input type="button" value="Generate Pivot Table" class="btn-configure-pivot"/>
</div>

<table cellpadding="0" cellspacing="0" border="0" class="display" id="sales">
	<thead>
		<tr>
			<th width="20%">Product</th>
			<th>Origin</th>
			<th width="0%"></th>
            <th width="25%">Day</th>
			<th width="5%">Sales</th>			
		</tr>
	</thead>
	<tbody>
		
	</tbody>
    
</table>

<div style="margin:1em 0;">
  <input type="button" value="Generate Pivot Table" class="btn-configure-pivot"/>
</div>

<%= render 'pivot_dialog' %>

<script type="text/javascript">
  $(function() {
    var sales_url = '<%= sales_path(:format => :json) %>';
    PivotTableApp.sales.init(sales_url);
  });
</script>